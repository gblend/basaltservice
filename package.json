{
  "name": "basaltservice-api",
  "version": "1.0.0",
  "description": "basaltService backend APIs",
  "repository": {
    "type": "git",
    "url": "git://github.com/gblend/basaltservice.git"
  },
  "main": "dist/server",
  "scripts": {
    "dev": "NODE_ENV=development nodemon dist/server",
    "build": "rimraf -rf dist && tsc",
    "postbuild": "copyfiles --error .env .github/**/*.* dist",
    "start": "NODE_ENV=production node dist/server",
    "lint": "eslint --ignore-path .eslintignore .",
    "format": "prettier --ignore-path .gitignore --write \"{app,test}/**/*.{js,ts}\"",
    "pm2:dev": "NODE_ENV=development NODE_PATH=. DEBUG=* pm2 delete dist/ecosystem.config.js && pm2 start dist/ecosystem.config.js --no-daemon",
    "pm2": "NODE_ENV=production NODE_PATH=. pm2 delete dist/ecosystem.config.js && pm2 start dist/ecosystem.config.js",
    "test": "NODE_ENV=test jest --coverage dist/tests/* --forceExit",
    "unit": "jest --coverage dist/tests/unit",
    "integration": "NODE_ENV=test jest --coverage dist/tests/integration/* --forceExit",
    "migrate:db:create": "npx sequelize-cli db:create",
    "migrate:up": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:seed:undo": "npx sequelize-cli db:seed:undo",
    "prepare": "husky install"
  },
  "author": "gabrielilo190@gmail.com",
  "license": "ISC",
  "dependencies": {
    "amqplib": "^0.8.0",
    "bcryptjs": "^2.4.3",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^5.4.1",
    "helmet": "^4.6.0",
    "http-status-codes": "^2.1.4",
    "install": "^0.13.0",
    "ioredis": "^5.3.0",
    "jest": "^29.5.0",
    "joi": "^17.4.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "mysql2": "^3.7.1",
    "nock": "^13.2.4",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.7.2",
    "pm2": "^5.3.0",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "requestretry": "^7.1.0",
    "sequelize": "^6.34.0",
    "sequelize-typescript": "^2.1.5",
    "swagger-ui-express": "^4.6.2",
    "validator": "^13.6.0",
    "winston": "^3.7.2",
    "xss-filters": "^1.2.7"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.15",
    "@types/ioredis-mock": "^8.2.1",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.18.9",
    "@types/nodemailer": "^6.4.7",
    "@types/validator": "^13.11.6",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "mock-amqplib": "^1.8.1",
    "nodemon": "^2.0.9",
    "prettier": "^3.0.0",
    "rimraf": "^4.1.2",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.1.6",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=14.0.0 <19.0.0"
  }
}
